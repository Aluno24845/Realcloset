<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Título do Formulário -->
    <TextView
        android:id="@+id/formTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Peça"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Título -->
    <EditText
        android:id="@+id/add_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>


    <!-- Ícone para abrir a câmera -->
    <ImageView
        android:id="@+id/takePhotoIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_camera"
        android:layout_gravity="center"
        android:contentDescription="Ícone da câmera"
        android:layout_marginBottom="20dp"/>

    <!-- Marca -->
    <EditText
        android:id="@+id/add_marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Referência -->
    <EditText
        android:id="@+id/add_referencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Referência"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Categoria (Spinner) -->
    <Spinner
        android:id="@+id/categoria_peca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Botão para enviar o formulário -->
    <Button
        android:id="@+id/botao_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submeter"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/azul"/>
</LinearLayout>

