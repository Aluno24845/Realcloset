<!-- Layout de cartão para mostrar os detalhes da peça -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/peca_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Título da peça" />

        <TextView
            android:id="@+id/peca_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca: " />

        <TextView
            android:id="@+id/peca_referencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referência: " />

        <TextView
            android:id="@+id/peca_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria: " />

        <ImageView
            android:id="@+id/peca_imagem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
