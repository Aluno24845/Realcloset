<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Texto informativo -->
        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Nome completo do utilizador-->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name_placeholder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Email atual do utilizador -->
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_email_placeholder"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Informações adicionais (data de nascimento e tipo de perfil) -->
        <TextView
            android:id="@+id/profile_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_details_placeholder"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Texto informativo -->
        <TextView
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"/>


        <!-- Campo para o utilizador editar o seu email -->
        <EditText
            android:id="@+id/profile_email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp" />

        <!-- Botão para salvar as alterações no email -->
        <Button
            android:id="@+id/save_email_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_email"
            android:layout_marginBottom="16dp"
            android:background="@color/azul"/>

        <!-- RadioButtons para o tipo de perfil -->
        <RadioGroup
            android:id="@+id/profile_type_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/public_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_profile"
                android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/private_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_profile" />
        </RadioGroup>

        <!-- Botão para salvar as alterações no tipo de perfil -->
        <Button
            android:id="@+id/save_profile_type_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/azul"
            android:text="@string/save_profile_type" />

        <!-- Campo para o utilizador editar a sua password -->
        <EditText
            android:id="@+id/profile_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_password"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp" />

        <!-- Botão para salvar as alterações na password -->
        <Button
            android:id="@+id/save_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_password"
            android:layout_marginBottom="16dp"
            android:background="@color/azul"/>

    </LinearLayout>
</ScrollView>
